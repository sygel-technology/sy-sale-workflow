<odoo>
    <record id="res_partner_stock_deposit_creation_wizard_form" model="ir.ui.view">
        <field name="name">res.partner.stock.deposit.creation.wizard.form</field>
        <field name="model">res.partner.stock.deposit.creation.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_id" invisible="1" />
                        <field name="deposit_name" readonly="1" />
                        <field name="stock_deposit_id" />
                    </group>
                </sheet>
                <footer>
                    <button
                        name="action_create"
                        type="object"
                        string="Create"
                        class="oe_highlight"
                    />
                    <button special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record
        id="res_partner_stock_deposit_creation_wizard_action"
        model="ir.actions.act_window"
    >
        <field name="name">Create Stock Deposit</field>
        <field name="res_model">res.partner.stock.deposit.creation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
