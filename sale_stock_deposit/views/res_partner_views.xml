<odoo>
    <record id="stock_deposit_view_partner_stock_form" model="ir.ui.view">
        <field name="name">stock.deposit.view.partner.stock.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="stock.view_partner_stock_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position='inside'>
                <button
                    class="oe_stat_button"
                    type="object"
                    name="action_view_deposits"
                    icon="fa-archive"
                >
                    <field string="Deposits" name="deposit_count" widget="statinfo" />
                </button>
            </xpath>
            <xpath expr="//page[@name='sales_purchases']" position='after'>
                <page name="Stock Deposits">
                    <div style="margin-bottom: 15px;">
                        <button
                            name="action_create_stock_deposit_wizard"
                            type="object"
                            string="Create New deposit"
                            class="oe_highlight"
                            groups="sales_team.group_sale_manager,stock.group_stock_manager"
                        />
                    </div>
                    <field name="deposit_ids" nolabel="1">
                        <tree create="false">
                            <field name="warehouse_id" />
                            <field name="location_id" />
                            <field name="name" string="Deposit Name" />
                            <field name="company_id" />
                            <button
                                name="action_view_stock_deposit_wizard"
                                type="object"
                                string="View Deposit State"
                                class="oe_highlight"
                            />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
