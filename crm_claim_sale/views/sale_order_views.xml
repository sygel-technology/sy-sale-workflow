<odoo>
    <record id="crm_claim_sale_sale_view_inherit123" model="ir.ui.view">
        <field name="name">crm.claim.sale.sale.view.inherit123</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_crm.sale_view_inherit123" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='opportunity_id']" position='after'>
                <field name="claim_id" />
            </xpath>
        </field>
    </record>

    <record id="crm_claim_sale_action_quotations_new" model="ir.actions.act_window">
        <field name="name">Quotation</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">form,tree,graph</field>
        <field name="domain">[('claim_id', '=', active_id)]</field>
        <field
            name="context"
        >{'search_default_claim_id': active_id, 'default_claim_id': active_id}</field>
    </record>
</odoo>
