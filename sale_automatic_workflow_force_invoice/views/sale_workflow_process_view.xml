<odoo>
    <record id="sale_workflow_process_force_invoice_view_form" model="ir.ui.view">
        <field name="name">sale.workflow.process.force.invoice.view.form</field>
        <field name="model">sale.workflow.process</field>
        <field
            name="inherit_id"
            ref="sale_automatic_workflow.sale_workflow_process_view_form"
        />
        <field name="arch" type="xml">
            <field name="send_order_confirmation_mail" position="before">
                <field name="force_invoice" />
                <label
                    for="force_invoice_order_filter_id"
                    attrs="{'required':[('force_invoice','=',True)], 'invisible':[('force_invoice','!=',True)]}"
                />
                <div
                    attrs="{'required':[('force_invoice','=',True)], 'invisible':[('force_invoice','!=',True)]}"
                >
                    <field
                        name="force_invoice_order_filter_domain"
                        widget="domain"
                        attrs="{'invisible': [('force_invoice_order_filter_id', '=', False)]}"
                        options="{'model': 'sale.order'}"
                    />
                    <div class="oe_edit_only oe_inline">
                        Set selection based on a search filter:

                        <field
                            name="force_invoice_order_filter_id"
                            domain="[('model_id', '=', 'sale.order')]"
                            class="oe_inline"
                            context="{'default_model_id': 'sale.order', 'default_active': False, 'active_test': False}"
                            can_create="true"
                            can_write="true"
                        />
                    </div>
                </div>
            </field>
        </field>
    </record>
    <record id="sale_workflow_process_force_invoice_view_tree" model="ir.ui.view">
        <field name="name">sale.workflow.process.force.invoice.view.tree</field>
        <field name="model">sale.workflow.process</field>
        <field
            name="inherit_id"
            ref="sale_automatic_workflow.sale_workflow_process_view_tree"
        />
        <field name="arch" type="xml">
            <field name="validate_order" position="after">
                <field name="force_invoice" />
            </field>
        </field>
    </record>
</odoo>
