<odoo>

    <record id="sale_order_required_rule_form_view" model="ir.ui.view">
        <field name="name">sale.order.required.rule.form.view</field>
        <field name="model">sale.order.required.rule</field>
        <field name="arch" type="xml">
            <form string="Sale Order Required Rule">
                 <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" class="oe_inline" />
                        </h1>
                    </div>
                    <group>
                        <field name="domain" widget="domain" options='{"model": "sale.order"}'/>
                        <field name="error_description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_order_required_rule_tree_view" model="ir.ui.view">
        <field name="name">sale.order.required.rule.tree.view</field>
        <field name="model">sale.order.required.rule</field>
        <field name="arch" type="xml">
            <tree string="Sale Order Required Rule">
                <field name="name"/>
                <field name="domain"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sale_order_required_rule_action">
        <field name="name">Sale Order Required Rule</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.required.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="sale_order_required_rule_tree_view"/>
    </record>

    <menuitem
        id="sale_order_required_rule_menu"
        parent="sale.menu_sales_config"
        name="Required Rules"
        action="sale_order_required_rule_action"
        sequence="99"
    />
    
</odoo>
