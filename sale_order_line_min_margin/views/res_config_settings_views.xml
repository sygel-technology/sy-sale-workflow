<odoo>
    <record
        id="sale_order_line_min_margin_res_config_settings_view_form"
        model="ir.ui.view"
    >
        <field
            name="name"
        >sale.order.line.min.margin.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr='//field[@name="module_sale_margin"]/../..' position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="apply_so_line_min_margin" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="apply_so_line_min_margin" />
                        <div class="text-muted">
                            If set, sale order lines minimum margin (in %).
                        </div>
                        <div
                            class="content-group"
                            attrs="{'invisible': [('apply_so_line_min_margin' ,'=', False)]}"
                        >
                            <div>
                                <field name="so_line_min_margin" class="oe_inline" />%
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
