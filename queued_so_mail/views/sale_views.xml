<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">queued.so.mail.view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Mail Queues" name="mail_queues" attrs="{'invisible': [('has_queues', '=', False)]}">
                    <field name="mail_queue_ids" />
                    <field name="has_queues" invisible="1" />
                </page>
            </xpath>
        </field>
    </record>
</odoo>
