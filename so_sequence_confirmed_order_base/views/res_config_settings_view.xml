<odoo>
    <record id="sale_order_sequence_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">sale.order.sequence.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='group_proforma_sales']/../.." position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="use_confirmed_prefix" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="use_confirmed_prefix" />
                        <div class="text-muted">
                           If checked, the all confirmed sales orders will have a different prefix from the quotation prefix, but the sequence will be preserved.
                        </div>
                    </div>
                    <div class="o_setting_right_pane" attrs="{'invisible': [('use_confirmed_prefix', '=', False)]}">
                        <span class="o_form_label">Confirmed Sale Order Prefix</span>
                        <br/>
                        <div class="text-muted">
                            <field name="confirmed_prefix" class="text-left oe_inline" attrs="{'required': [('use_confirmed_prefix', '=', True)]}"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
