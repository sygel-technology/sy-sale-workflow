<odoo>
    <record id="print_picking_from_sale_view_order_form" model="ir.ui.view">
        <field name="name">print.picking.from.sale.view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']" position="inside">
                <group name="print_picking" string="Print Picking">
                    <group>
                        <field name="complete_picking_id" options="{'no_create': True}"/>
                        <field name="complete_picking_name"/>
                        <field name="picking_ids" invisible="1"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
