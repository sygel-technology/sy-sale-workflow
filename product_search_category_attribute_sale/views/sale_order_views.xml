<odoo>

    <record id="product_search_cat_att_view_order_form" model="ir.ui.view">
        <field name="name">product.search.cat.attr.view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='order_lines']//field[@name='order_line']"
                position="before"
            >
                <button
                    type="object"
                    name="action_open_product_search_cat_attr_sale"
                    string="Search Product"
                />
            </xpath>
        </field>
    </record>
</odoo>
